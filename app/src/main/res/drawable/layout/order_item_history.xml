<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView android:id="@+id/number_item_order"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="ceshi"/>
    <TextView android:id="@+id/date_item_order"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/ispaid_item_order"
        android:text="ceshi"/>
    <TextView android:id="@+id/ispaid_item_order"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:text="ceshi"/>
    <Button android:id="@+id/but_order_item_history_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ispaid_item_order"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:text="@string/comment"
        android:layout_marginRight="20dp"/>

</RelativeLayout>
