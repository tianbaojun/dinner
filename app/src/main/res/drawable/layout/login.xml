<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:textSize="25dp"
                android:text="@string/user"
                android:layout_gravity="right"/>
            <EditText
                android:id="@+id/user"
                android:hint="请输入用户名"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="25dp"
                android:text="@string/password"
                android:layout_gravity="right"/>
            <EditText
                android:id="@+id/password"
                android:hint="请输入密码"
                android:password="true"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <CheckBox
            android:layout_width="150dp" android:layout_height="60dp"
            android:paddingTop="15dp" android:paddingBottom="10dp"
            android:text="是否保存密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="150dp" android:layout_height="60dp"
            android:id="@+id/login" android:layout_marginRight="15dp"
            android:text="登录" android:textSize="18dp"/>
        <Button
            android:layout_width="150dp" android:layout_height="60dp"
            android:id="@+id/register" android:layout_marginLeft="15dp"
            android:text="注册" android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>
